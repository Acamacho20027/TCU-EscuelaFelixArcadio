<!DOCTYPE html>
<html lang="es" dir="ltr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Language" content="es" />
    <title>@ViewBag.Title - Panel de Administración - Escuela Félix Arcadio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="~/Content/admin-layout.css" rel="stylesheet" />
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <nav class="admin-sidebar">
            <!-- Logo Section -->
            <div class="sidebar-header">
                <div class="sidebar-logo">
                    <div class="sidebar-logo-icon">
                        <img src="~/Content/images/escudo_escuela_felix_arcadio.jpg" alt="Escudo Escuela Félix Arcadio" class="escudo-image">
                    </div>
                    <div class="sidebar-logo-text">
                        <div class="sidebar-logo-title">Escuela Félix Arcadio Montero Monge</div>
                        <div class="sidebar-logo-subtitle">Panel de Administración</div>
                    </div>
                </div>
            </div>

            <!-- Navigation Menu -->
            <div class="sidebar-nav">
                <!-- PLATAFORMA Section -->
                <div class="nav-section">
                    <div class="nav-section-title">PLATAFORMA</div>
                    <ul class="nav-menu">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Inventario")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Inventario" ? "active" : "")">
                                <i class="fas fa-boxes"></i>
                                <span>Inventario</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Categoria")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Categoria" ? "active" : "")">
                                <i class="fas fa-tags"></i>
                                <span>Categorías</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Prestamos")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Prestamos" ? "active" : "")">
                                <i class="fas fa-hand-holding"></i>
                                <span>Préstamos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Sanciones")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Sanciones" ? "active" : "")">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span>Sanciones</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Reportes")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Reportes" ? "active" : "")">
                                <i class="fas fa-chart-line"></i>
                                <span>Reportes</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Separator -->
                <div class="nav-separator"></div>

                <!-- ADMINISTRACIÓN Section -->
                <div class="nav-section">
                    <div class="nav-section-title">ADMINISTRACIÓN</div>
                    <ul class="nav-menu">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Administrativo")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Administrativo" ? "active" : "")">
                                <i class="fas fa-users-cog"></i>
                                <span>Administrativo</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Reportes")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Reportes" ? "active" : "")">
                                <i class="fas fa-chart-line"></i>
                                <span>Reportes</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Estadisticas")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Estadisticas" ? "active" : "")">
                                <i class="fas fa-chart-bar"></i>
                                <span>Estadísticas</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Deportivo")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Deportivo" ? "active" : "")">
                                <i class="fas fa-running"></i>
                                <span>Deportivo</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Espacios")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Espacios" ? "active" : "")">
                                <i class="fas fa-building"></i>
                                <span>Espacios</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="admin-main">
            <!-- Header -->
            <header class="admin-header">
                <h1 class="admin-header-title">@ViewBag.Title</h1>
                <div class="admin-user-info">
                    <span class="admin-user-name">Bienvenido @User.Identity.Name!</span>
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { @class = "logout-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="logout-btn">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Cerrar Sesión</span>
                        </button>
                    }
                </div>
            </header>

            <!-- Content -->
            <div class="admin-content">
                @RenderBody()
            </div>
        </main>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(document).ready(function() {
            // Función para corregir caracteres corruptos
            function fixText() {
                // Corregir título principal
                $('.sidebar-logo-title').text('Escuela Félix Arcadio Montero Monge');
                $('.sidebar-logo-subtitle').text('Panel de Administración');
                
                // Corregir enlaces específicos del menú por posición
                $('.nav-section:first .nav-link:nth-child(2) span').text('Categorías');
                $('.nav-section:first .nav-link:nth-child(4) span').text('Préstamos');
                $('.nav-section:last .nav-link:nth-child(2) span').text('Estadísticas');
                
                // Corregir título de sección ADMINISTRACIÓN
                $('.nav-section:last .nav-section-title').text('ADMINISTRACIÓN');
                
                // Corregir botón cerrar sesión
                $('.admin-user-logout').html('<i class="fas fa-sign-out-alt"></i> Cerrar Sesión');
                
                // Corrección global de caracteres doblemente codificados
                $('*').contents().filter(function() {
                    return this.nodeType === 3; // Text nodes
                }).each(function() {
                    var text = $(this).text();
                    if (text.includes('ÃƒÂ')) {
                        $(this).text(text.replace(/ÃƒÂ©/g, 'é').replace(/ÃƒÂ³/g, 'ó').replace(/ÃƒÂ¡/g, 'á').replace(/ÃƒÂ­/g, 'í').replace(/ÃƒÂ±/g, 'ñ'));
                    }
                    if (text.includes('Ã')) {
                        $(this).text(text.replace(/Ã©/g, 'é').replace(/Ã³/g, 'ó').replace(/Ã¡/g, 'á').replace(/Ã­/g, 'í').replace(/Ã±/g, 'ñ'));
                    }
                });
                
                // Corrección específica para elementos con texto visible
                $('.nav-link span, .nav-section-title, .sidebar-logo-title, .sidebar-logo-subtitle').each(function() {
                    var text = $(this).text();
                    if (text.includes('Categor') && text.includes('Ã')) {
                        $(this).text('Categorías');
                    }
                    if (text.includes('Pr') && text.includes('Ã')) {
                        $(this).text('Préstamos');
                    }
                    if (text.includes('Estad') && text.includes('Ã')) {
                        $(this).text('Estadísticas');
                    }
                    if (text.includes('ADMINISTRACI') && text.includes('Ã')) {
                        $(this).text('ADMINISTRACIÓN');
                    }
                });
            }
            
            // Ejecutar múltiples veces
            fixText();
            setTimeout(fixText, 50);
            setTimeout(fixText, 100);
            setTimeout(fixText, 200);
            setTimeout(fixText, 500);
            setTimeout(fixText, 1000);
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
