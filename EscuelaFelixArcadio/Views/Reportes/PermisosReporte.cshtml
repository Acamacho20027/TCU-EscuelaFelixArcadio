@{
    ViewBag.Title = "Permisos de Reportes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/reportes.css" rel="stylesheet" />
}

<div class="reportes-container">
    <!-- Header -->
    <div class="reportes-header">
        <h1>
            <i class="fas fa-shield-alt header-icon"></i>
            @ViewBag.Title
        </h1>
        <div class="header-subtitle">
            Gestiona los permisos de acceso a reportes para usuarios y roles
        </div>
    </div>

    <!-- Estadísticas de permisos -->
    <div class="estadisticas-grid">
        <div class="estadistica-card">
            <div class="estadistica-valor" id="totalPermisos">@(ViewBag.TotalPermisos ?? 0)</div>
            <div class="estadistica-label">Total Permisos</div>
        </div>
        <div class="estadistica-card">
            <div class="estadistica-valor" id="usuariosConPermisos">@(ViewBag.UsuariosConPermisos ?? 0)</div>
            <div class="estadistica-label">Usuarios con Permisos</div>
        </div>
        <div class="estadistica-card">
            <div class="estadistica-valor" id="reportesRestringidos">@(ViewBag.ReportesRestringidos ?? 0)</div>
            <div class="estadistica-label">Reportes Restringidos</div>
        </div>
        <div class="estadistica-card">
            <div class="estadistica-valor" id="permisosPendientes">@(ViewBag.PermisosPendientes ?? 0)</div>
            <div class="estadistica-label">Permisos Pendientes</div>
        </div>
    </div>

    <!-- Formulario para asignar permisos -->
    <div class="form-section">
        <div class="filtros-header">
            <i class="fas fa-plus filtros-icon"></i>
            <h3>Asignar Nuevo Permiso</h3>
        </div>
        
        <form id="formPermiso">
            <div class="filtros-grid">
                <div class="filtro-group">
                    <label for="tipoAsignacion">Tipo de Asignación</label>
                    <select id="tipoAsignacion" name="tipoAsignacion" required>
                        <option value="">Seleccionar tipo</option>
                        <option value="usuario">Usuario Individual</option>
                        <option value="rol">Rol</option>
                    </select>
                </div>
                
                <div class="filtro-group" id="grupoUsuario" style="display: none;">
                    <label for="idUsuario">Usuario</label>
                    <select id="idUsuario" name="idUsuario">
                        <option value="">Seleccionar usuario</option>
                        @if (ViewBag.Usuarios != null)
                        {
                            foreach (var usuario in (List<EscuelaFelixArcadio.Models.ApplicationUser>)ViewBag.Usuarios)
                            {
                                <option value="@usuario.Id">@usuario.UserName</option>
                            }
                        }
                    </select>
                </div>
                
                <div class="filtro-group" id="grupoRol" style="display: none;">
                    <label for="idRol">Rol</label>
                    <select id="idRol" name="idRol">
                        <option value="">Seleccionar rol</option>
                        <option value="Administrador">Administrador</option>
                        <option value="Usuario">Usuario</option>
                        <option value="Profesor">Profesor</option>
                        <option value="Estudiante">Estudiante</option>
                    </select>
                </div>
                
                <div class="filtro-group">
                    <label for="tipoReporte">Tipo de Reporte</label>
                    <select id="tipoReporte" name="tipoReporte" required>
                        <option value="">Seleccionar tipo</option>
                        <option value="inventario">Inventario</option>
                        <option value="prestamos">Préstamos</option>
                        <option value="sanciones">Sanciones</option>
                        <option value="general">General</option>
                        <option value="todos">Todos los Reportes</option>
                    </select>
                </div>
            </div>
            
            <div class="filtros-grid">
                <div class="filtro-group">
                    <label>Permisos</label>
                    <div class="checkbox-group">
                        <label>
                            <input type="checkbox" id="puedeVisualizar" name="puedeVisualizar" checked />
                            Puede Visualizar
                        </label>
                        <label>
                            <input type="checkbox" id="puedeDescargar" name="puedeDescargar" />
                            Puede Descargar
                        </label>
                        <label>
                            <input type="checkbox" id="puedeEditar" name="puedeEditar" />
                            Puede Editar
                        </label>
                        <label>
                            <input type="checkbox" id="puedeCompartir" name="puedeCompartir" />
                            Puede Compartir
                        </label>
                    </div>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i>
                    Asignar Permiso
                </button>
                <button type="button" class="btn-secondary" onclick="limpiarFormulario()">
                    <i class="fas fa-times"></i>
                    Limpiar
                </button>
            </div>
        </form>
    </div>

    <!-- Lista de permisos existentes -->
    <div class="datos-section">
        <div class="datos-header">
            <h3>
                <i class="fas fa-list"></i>
                Permisos Asignados
            </h3>
            <div class="datos-actions">
                <button type="button" class="btn-filtrar" onclick="exportarPermisos()">
                    <i class="fas fa-download"></i>
                    Exportar Lista
                </button>
            </div>
        </div>
        
        <div class="tabla-responsive">
            <table class="tabla-datos">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario/Rol</th>
                        <th>Tipo</th>
                        <th>Tipo Reporte</th>
                        <th>Visualizar</th>
                        <th>Descargar</th>
                        <th>Editar</th>
                        <th>Compartir</th>
                        <th>Fecha Creación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Permisos != null)
                    {
                        foreach (var permiso in (List<EscuelaFelixArcadio.Models.PermisoReporte>)ViewBag.Permisos)
                        {
                            <tr>
                                <td>@permiso.IdPermiso</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(permiso.IdUsuario))
                                    {
                                        <span class="badge badge-info">@permiso.IdUsuario</span>
                                    }
                                    else if (!string.IsNullOrEmpty(permiso.IdRol))
                                    {
                                        <span class="badge badge-success">@permiso.IdRol</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(permiso.IdUsuario))
                                    {
                                        <span class="badge badge-primary">Usuario</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Rol</span>
                                    }
                                </td>
                                <td>@permiso.TipoReporte</td>
                                <td>
                                    @if (permiso.PuedeVisualizar)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (permiso.PuedeDescargar)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (permiso.PuedeEditar)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (permiso.PuedeCompartir)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times"></i>
                                        </span>
                                    }
                                </td>
                                <td>@permiso.FechaCreacion.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <button type="button" class="btn-exportar" onclick="editarPermiso(@permiso.IdPermiso)">
                                        <i class="fas fa-edit"></i>
                                        Editar
                                    </button>
                                    <button type="button" class="btn-exportar btn-excel" onclick="eliminarPermiso(@permiso.IdPermiso)">
                                        <i class="fas fa-trash"></i>
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center">
                                <div class="loading">Cargando permisos...</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Logs de acceso -->
    <div class="datos-section">
        <div class="datos-header">
            <h3>
                <i class="fas fa-history"></i>
                Logs de Acceso Recientes
            </h3>
            <div class="datos-actions">
                <a href="@Url.Action("LogsAcceso")" class="btn-exportar">
                    <i class="fas fa-eye"></i>
                    Ver Todos
                </a>
            </div>
        </div>
        
        <div class="tabla-responsive">
            <table class="tabla-datos">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Tipo Reporte</th>
                        <th>Acción</th>
                        <th>Fecha/Hora</th>
                        <th>IP</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.LogsRecientes != null)
                    {
                        foreach (var log in (List<EscuelaFelixArcadio.Models.LogAccesoReporte>)ViewBag.LogsRecientes)
                        {
                            <tr>
                                <td>@log.IdUsuario</td>
                                <td>@log.TipoReporte</td>
                                <td>
                                    <span class="badge badge-info">@log.Accion</span>
                                </td>
                                <td>@log.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@log.DireccionIP</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">
                                <div class="loading">Cargando logs...</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            // Configurar formulario
            $('#formPermiso').on('submit', function(e) {
                e.preventDefault();
                asignarPermiso();
            });
            
            // Mostrar/ocultar campos según el tipo de asignación
            $('#tipoAsignacion').on('change', function() {
                var tipo = $(this).val();
                if (tipo === 'usuario') {
                    $('#grupoUsuario').show();
                    $('#grupoRol').hide();
                    $('#idUsuario').prop('required', true);
                    $('#idRol').prop('required', false);
                } else if (tipo === 'rol') {
                    $('#grupoUsuario').hide();
                    $('#grupoRol').show();
                    $('#idUsuario').prop('required', false);
                    $('#idRol').prop('required', true);
                } else {
                    $('#grupoUsuario, #grupoRol').hide();
                    $('#idUsuario, #idRol').prop('required', false);
                }
            });
        });

        function asignarPermiso() {
            var tipoAsignacion = $('#tipoAsignacion').val();
            var idUsuario = $('#idUsuario').val();
            var idRol = $('#idRol').val();
            var tipoReporte = $('#tipoReporte').val();
            var puedeVisualizar = $('#puedeVisualizar').is(':checked');
            var puedeDescargar = $('#puedeDescargar').is(':checked');
            var puedeEditar = $('#puedeEditar').is(':checked');
            var puedeCompartir = $('#puedeCompartir').is(':checked');
            
            if (!tipoAsignacion || !tipoReporte) {
                alert('Por favor completa los campos obligatorios');
                return;
            }
            
            if (tipoAsignacion === 'usuario' && !idUsuario) {
                alert('Por favor selecciona un usuario');
                return;
            }
            
            if (tipoAsignacion === 'rol' && !idRol) {
                alert('Por favor selecciona un rol');
                return;
            }
            
            $.ajax({
                url: '@Url.Action("AsignarPermiso")',
                type: 'POST',
                data: {
                    tipoAsignacion: tipoAsignacion,
                    idUsuario: idUsuario,
                    idRol: idRol,
                    tipoReporte: tipoReporte,
                    puedeVisualizar: puedeVisualizar,
                    puedeDescargar: puedeDescargar,
                    puedeEditar: puedeEditar,
                    puedeCompartir: puedeCompartir,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert('Permiso asignado exitosamente');
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error al asignar el permiso');
                }
            });
        }

        function limpiarFormulario() {
            $('#formPermiso')[0].reset();
            $('#grupoUsuario, #grupoRol').hide();
            $('#idUsuario, #idRol').prop('required', false);
        }

        function editarPermiso(idPermiso) {
            // Aquí se implementaría la lógica para editar el permiso
            alert('Editar permiso ID: ' + idPermiso);
        }

        function eliminarPermiso(idPermiso) {
            if (confirm('¿Estás seguro de que quieres eliminar este permiso?')) {
                $.ajax({
                    url: '@Url.Action("EliminarPermiso")',
                    type: 'POST',
                    data: { 
                        idPermiso: idPermiso,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert('Permiso eliminado exitosamente');
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Error al eliminar el permiso');
                    }
                });
            }
        }

        function exportarPermisos() {
            window.open('@Url.Action("ExportarPermisos")', '_blank');
        }
    </script>
    
    <style>
        .checkbox-group {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        .checkbox-group label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: normal;
            margin-bottom: 0;
        }
        
        .checkbox-group input[type="checkbox"] {
            margin: 0;
        }
    </style>
}