@model EscuelaFelixArcadio.Models.Prestamo

@{
    ViewBag.Title = "Detalles de Prestamo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    var statusClass = "";
    var estadoDescripcion = Model.Estado.Descripcion.ToLower();
    
    if (estadoDescripcion.Contains("activo") && !estadoDescripcion.Contains("inactivo"))
    {
        statusClass = "success";
    }
    else if (estadoDescripcion.Contains("pendiente"))
    {
        statusClass = "warning";
    }
    else if (estadoDescripcion.Contains("devuelto") || estadoDescripcion.Contains("completado"))
    {
        statusClass = "info";
    }
    else if (estadoDescripcion.Contains("vencido"))
    {
        statusClass = "error";
    }
    else
    {
        statusClass = "warning";
    }
}

@section Styles {
    <link href="~/Content/prestamos.css" rel="stylesheet" />
}

<div class="prestamos-container">
    <div class="prestamos-details-container">
        <h2 class="prestamos-details-title">Detalles del Prestamo</h2>

        <!-- Informacion principal -->
        <div class="prestamos-details-card">
            <h3 class="prestamos-details-card-title">
                <i class="fas fa-hand-holding"></i> Informacion del Prestamo
            </h3>
            <div class="prestamos-details-grid">
                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">ID del Prestamo</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-hashtag"></i> @Model.IdPrestamo
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Numero de Prestamo</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-barcode"></i> @Model.NumeroPrestamo
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Usuario</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-user"></i> @(Model.ApplicationUser?.UserName ?? "Usuario no encontrado")
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Email del Usuario</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-envelope"></i> @(Model.ApplicationUser?.Email ?? "No disponible")
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Estado</label>
                    <div class="prestamos-details-value">
                        <span class="prestamos-status-badge @statusClass">
                            @Model.Estado.Descripcion
                        </span>
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Estado de Devolucion</label>
                    <div class="prestamos-details-value">
                        @if (Model.Devolucion)
                        {
                            <span class="prestamos-status-badge success">
                                <i class="fas fa-check-circle"></i> Devuelto
                            </span>
                        }
                        else
                        {
                            <span class="prestamos-status-badge warning">
                                <i class="fas fa-clock"></i> Pendiente
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Informacion de fechas -->
        <div class="prestamos-details-card">
            <h3 class="prestamos-details-card-title">
                <i class="fas fa-calendar-alt"></i> Fechas del Prestamo
            </h3>
            <div class="prestamos-details-grid">
                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Fecha de Creacion</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-calendar-plus"></i> @Model.FechadeCreacion.ToString("dd/MM/yyyy HH:mm:ss")
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Fecha de Devolucion</label>
                    <div class="prestamos-details-value">
                        @if (Model.FechaDevolucion.HasValue)
                        {
                            <i class="fas fa-calendar-check"></i>
                            @Model.FechaDevolucion.Value.ToString("dd/MM/yyyy HH:mm:ss")
                        }
                        else
                        {
                            <i class="fas fa-clock"></i>
                            <span style="color: #f59e0b;">Pendiente</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Notas -->
        @if (!string.IsNullOrEmpty(Model.Notas))
        {
            <div class="prestamos-details-card">
                <h3 class="prestamos-details-card-title">
                    <i class="fas fa-sticky-note"></i> Notas u Observaciones
                </h3>
                <div class="prestamos-details-field" style="grid-column: 1 / -1;">
                    <div class="prestamos-details-value" style="white-space: pre-wrap;">
                        @Model.Notas
                    </div>
                </div>
            </div>
        }

        <!-- Botones de accion -->
        <div class="prestamos-form-buttons">
            <a href="@Url.Action("Edit", new { id = Model.IdPrestamo })" class="btn-prestamos-save">
                Editar Prestamo
            </a>
            <a href="@Url.Action("Index")" class="btn-prestamos-cancel">
                Regresar a la Lista
            </a>
        </div>
    </div>
</div>
