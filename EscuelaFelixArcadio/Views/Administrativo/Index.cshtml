@{
    ViewBag.Title = "Panel Administrativo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/admin-styles.css?v=8" rel="stylesheet" />
}

<div class="reportes-container">
    <!-- Header Principal -->
    <div class="reportes-header">
        <h1 class="reportes-title">@ViewBag.Title</h1>
    </div>
    
    <!-- Dashboard Principal -->
    <div class="dashboard-grid-admin">
        <!-- Gestión de Usuarios -->
        <div class="dashboard-card">
            <h3>
                <i class="fas fa-users card-icon"></i>
                Gestión de Usuarios
            </h3>
            <div class="card-description">
                Administra usuarios del sistema, crea nuevos usuarios, edita información y gestiona permisos de acceso.
            </div>
            <div class="card-actions-group">
                <a href="@Url.Action("ListarUsuarios", "Administrativo")" class="card-action">
                    <i class="fas fa-list"></i>
                    Ver Usuarios
                </a>
                <a href="@Url.Action("CrearUsuario", "Administrativo")" class="card-action">
                    <i class="fas fa-user-plus"></i>
                    Nuevo Usuario
                </a>
            </div>
        </div>

        <!-- Gestión de Roles -->
        <div class="dashboard-card">
            <h3>
                <i class="fas fa-user-shield card-icon"></i>
                Gestión de Roles
            </h3>
            <div class="card-description">
                Asigna y modifica roles de usuarios, cambia permisos y gestiona niveles de acceso al sistema.
            </div>
            <a href="@Url.Action("ListarUsuariosConRoles", "Administrativo")" class="card-action">
                <i class="fas fa-exchange-alt"></i>
                Gestionar Roles
            </a>
        </div>

        <!-- Mensajes del Sistema -->
        <div class="dashboard-card">
            <h3>
                <i class="fas fa-bullhorn card-icon"></i>
                Mensajes del Sistema
            </h3>
            <div class="card-description">
                Gestiona mensajes y notificaciones del sistema, crea alertas importantes y comunica cambios.
            </div>
            <div class="card-actions-group">
                <a href="@Url.Action("ListarMensajesSistema", "Administrativo")" class="card-action">
                    <i class="fas fa-list"></i>
                    Ver Mensajes
                </a>
                <a href="@Url.Action("CrearMensajeSistema", "Administrativo")" class="card-action">
                    <i class="fas fa-plus"></i>
                    Nuevo Mensaje
                </a>
            </div>
        </div>

        <!-- Configuración -->
        <div class="dashboard-card">
            <h3>
                <i class="fas fa-cog card-icon"></i>
                Configuración
            </h3>
            <div class="card-description">
                Configuraciones generales del sistema, ajustes de seguridad y parámetros de funcionamiento.
            </div>
            <a href="@Url.Action("Configuracion", "Administrativo")" class="card-action">
                <i class="fas fa-tools"></i>
                Configuración
            </a>
        </div>
    </div>
</div>
