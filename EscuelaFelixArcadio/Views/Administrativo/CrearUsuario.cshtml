@model EscuelaFelixArcadio.Models.ViewModels.CrearUsuarioViewModel

@{
    ViewBag.Title = "Crear Nuevo Usuario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/inventario.css" rel="stylesheet" />
}

<div class="inventario-container">
    <div class="inventario-form-container">
        <h1 class="inventario-form-title">Crear Nuevo Usuario</h1>

        @using (Html.BeginForm("CrearUsuario", "Administrativo", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <!-- Mensajes de validación -->
            @Html.ValidationSummary(true, "", new { @class = "inventario-alert inventario-alert-error" })

            <!-- Sección: Información de Usuario -->
            <div class="inventario-form-section">
                <h2 class="inventario-form-section-title">Información de Usuario</h2>
                <div class="inventario-form-grid">
                    <div class="inventario-form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "inventario-form-label" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "inventario-form-control", @type = "email", @placeholder = "Ingrese el correo electrónico" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="inventario-form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "inventario-form-label" })
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "inventario-form-control", @type = "password", @placeholder = "Ingrese la contraseña" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="inventario-form-group">
                        @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "inventario-form-label" })
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "inventario-form-control", @placeholder = "Ingrese el número de teléfono (opcional)", @pattern = "[0-9]+", @title = "Solo se permiten números" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- Sección: Configuración -->
            <div class="inventario-form-section">
                <h2 class="inventario-form-section-title">Configuración</h2>
                <div class="inventario-form-grid">
                    <div class="inventario-form-group">
                        @Html.LabelFor(model => model.RolInicial, htmlAttributes: new { @class = "inventario-form-label" })
                        @Html.DropDownListFor(model => model.RolInicial, (SelectList)ViewBag.Roles, "Seleccione un rol", htmlAttributes: new { @class = "inventario-form-control" })
                        @Html.ValidationMessageFor(model => model.RolInicial, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="inventario-form-buttons">
                <button type="submit" class="btn-inventario-save">
                    <i class="fas fa-plus"></i>
                    Crear Usuario
                </button>
                @Html.ActionLink("Regresar a la Lista", "ListarUsuarios", "Administrativo", null, new { @class = "btn-inventario-cancel" })
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            // Bloquear letras en el campo Teléfono
            $('input[name="PhoneNumber"]').on('keypress', function(e) {
                var char = String.fromCharCode(e.which);
                if (!/[0-9]/.test(char)) {
                    e.preventDefault();
                }
            });

            // Bloquear letras al pegar
            $('input[name="PhoneNumber"]').on('paste', function(e) {
                var paste = (e.originalEvent || e).clipboardData.getData('text');
                if (!/^[0-9]+$/.test(paste)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
