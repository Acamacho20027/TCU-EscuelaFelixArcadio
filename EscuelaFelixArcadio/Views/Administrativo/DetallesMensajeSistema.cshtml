@model EscuelaFelixArcadio.Models.MensajeSistema

@{
    ViewBag.Title = "Detalles del Mensaje";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/prestamos.css" rel="stylesheet" />
}

<div class="prestamos-container">
    <div class="prestamos-details-container">
        <h2 class="prestamos-details-title">Detalles del Mensaje</h2>

        <!-- Informacion principal -->
        <div class="prestamos-details-card">
            <h3 class="prestamos-details-card-title">
                <i class="fas fa-bullhorn"></i> Informacion del Mensaje
            </h3>
            <div class="prestamos-details-grid">
                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">ID del Mensaje</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-hashtag"></i> @Model.Id
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Título</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-heading"></i> @Model.Titulo
                    </div>
                </div>

                <div class="prestamos-details-field prestamos-details-field-full">
                    <label class="prestamos-details-label">Contenido</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-align-left"></i> @Model.Contenido
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Tipo</label>
                    <div class="prestamos-details-value">
                        @switch (Model.Tipo)
                        {
                            case "Info":
                                <span class="prestamos-status-badge success">
                                    <i class="fas fa-info-circle"></i> Info
                                </span>
                                break;
                            case "Advertencia":
                                <span class="prestamos-status-badge warning">
                                    <i class="fas fa-exclamation-triangle"></i> Advertencia
                                </span>
                                break;
                            case "Error":
                                <span class="prestamos-status-badge error">
                                    <i class="fas fa-times-circle"></i> Error
                                </span>
                                break;
                            case "Exito":
                                <span class="prestamos-status-badge success">
                                    <i class="fas fa-check-circle"></i> Éxito
                                </span>
                                break;
                            default:
                                <span class="prestamos-status-badge warning">@Model.Tipo</span>
                                break;
                        }
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Fecha de Inicio</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-calendar-alt"></i> @Model.FechaInicio.ToString("dd/MM/yyyy")
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Fecha de Fin</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-calendar-times"></i> @(Model.FechaFin?.ToString("dd/MM/yyyy") ?? "Indefinido")
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Rol Destino</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-users"></i> @(Model.RolDestino ?? "Todos los roles")
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Estado</label>
                    <div class="prestamos-details-value">
                        @if (Model.Activo)
                        {
                            <span class="prestamos-status-badge success">
                                <i class="fas fa-check-circle"></i> Activo
                            </span>
                        }
                        else
                        {
                            <span class="prestamos-status-badge error">
                                <i class="fas fa-ban"></i> Inactivo
                            </span>
                        }
                    </div>
                </div>

                <div class="prestamos-details-field">
                    <label class="prestamos-details-label">Fecha de Creación</label>
                    <div class="prestamos-details-value">
                        <i class="fas fa-clock"></i> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
            </div>
        </div>

        <!-- Botones de accion -->
        <div class="prestamos-form-buttons">
            <a href="@Url.Action("EditarMensajeSistema", "Administrativo", new { id = Model.Id })" class="btn-prestamos-save">
                Editar Mensaje
            </a>
            <a href="@Url.Action("ListarMensajesSistema", "Administrativo")" class="btn-prestamos-cancel">
                Regresar a la Lista
            </a>
        </div>
    </div>
</div>
