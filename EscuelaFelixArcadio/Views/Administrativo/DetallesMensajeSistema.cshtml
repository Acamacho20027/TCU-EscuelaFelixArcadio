@model EscuelaFelixArcadio.Models.MensajeSistema

@{
    ViewBag.Title = "Detalles del Mensaje";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/admin-styles.css?v=2" rel="stylesheet" />
}

<div class="reportes-container">
    <div class="admin-header">
        <h1 class="admin-title">Detalles del Mensaje</h1>
        <div>
            <a href="@Url.Action("EditarMensajeSistema", "Administrativo", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>

    <div class="admin-form">
        <dl class="dl-horizontal">
            <dt>Título:</dt>
            <dd>@Model.Titulo</dd>

            <dt>Contenido:</dt>
            <dd>@Model.Contenido</dd>

            <dt>Tipo:</dt>
            <dd>
                @switch (Model.Tipo)
                {
                    case "Info":
                        <span class="badge badge-info"><i class="fas fa-info-circle"></i> Info</span>
                        break;
                    case "Advertencia":
                        <span class="badge badge-warning"><i class="fas fa-exclamation-triangle"></i> Advertencia</span>
                        break;
                    case "Error":
                        <span class="badge badge-danger"><i class="fas fa-times-circle"></i> Error</span>
                        break;
                    case "Exito":
                        <span class="badge badge-success"><i class="fas fa-check-circle"></i> Éxito</span>
                        break;
                    default:
                        <span class="badge badge-secondary">@Model.Tipo</span>
                        break;
                }
            </dd>

            <dt>Fecha de Inicio:</dt>
            <dd>@Model.FechaInicio.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt>Fecha de Fin:</dt>
            <dd>@(Model.FechaFin?.ToString("dd/MM/yyyy HH:mm") ?? "Indefinido")</dd>

            <dt>Rol Destino:</dt>
            <dd><span class="badge badge-primary">@(Model.RolDestino ?? "Todos los roles")</span></dd>

            <dt>Estado:</dt>
            <dd>
                @if (Model.Activo)
                {
                    <span class="badge badge-success"><i class="fas fa-check"></i> Activo</span>
                }
                else
                {
                    <span class="badge badge-secondary"><i class="fas fa-ban"></i> Inactivo</span>
                }
            </dd>

            <dt>Fecha de Creación:</dt>
            <dd>@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>

        <div style="margin-top: 30px;">
            <a href="@Url.Action("ListarMensajesSistema", "Administrativo")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a Lista
            </a>
        </div>
    </div>
</div>
