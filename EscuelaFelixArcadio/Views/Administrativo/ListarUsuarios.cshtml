@model IEnumerable<EscuelaFelixArcadio.Models.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/admin-styles.css?v=2" rel="stylesheet" />
}

<div class="reportes-container">
    <div class="admin-header">
        <h1 class="admin-title">Gestión de Usuarios</h1>
        <a href="@Url.Action("CrearUsuario", "Administrativo")" class="btn-create">
            <i class="fas fa-user-plus"></i>
            Nuevo Usuario
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-custom alert-success-custom">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        </div>
    }

    <!-- Búsqueda -->
    <div class="admin-search">
        @using (Html.BeginForm("ListarUsuarios", "Administrativo", FormMethod.Get))
        {
            <div class="input-group">
                <input type="text" name="searchEmail" class="form-control" placeholder="Buscar por email..." value="@ViewBag.SearchEmail" />
                <button type="submit" class="btn-search">
                    <i class="fas fa-search"></i> Buscar
                </button>
            </div>
        }
    </div>

    <!-- Tabla de usuarios -->
    <div class="table-users">
        <table class="table table-hover table-users">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Email Confirmado</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.Email</td>
                            <td>@(usuario.PhoneNumber ?? "No registrado")</td>
                            <td>
                                @if (usuario.EmailConfirmed)
                                {
                                    <span class="badge badge-success">
                                        <i class="fas fa-check"></i> Confirmado
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">
                                        <i class="fas fa-times"></i> No confirmado
                                    </span>
                                }
                            </td>
                            <td>
                                @if (usuario.EstaBloqueado)
                                {
                                    <span class="badge badge-danger">
                                        <i class="fas fa-lock"></i> Bloqueado
                                    </span>
                                }
                                else
                                {
                                    <span class="badge badge-success">
                                        <i class="fas fa-unlock"></i> Activo
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="btn-action-group">
                                    <a href="@Url.Action("DetallesUsuario", "Administrativo", new { id = usuario.Id })" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("EditarUsuario", "Administrativo", new { id = usuario.Id })" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("EliminarUsuario", "Administrativo", new { id = usuario.Id })" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center" style="padding: 40px;">
                            <i class="fas fa-users" style="font-size: 3rem; color: #cbd5e1;"></i>
                            <p style="margin-top: 20px; color: #6b7280;">No se encontraron usuarios</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div style="margin-top: 20px;">
        <a href="@Url.Action("Index", "Administrativo")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>
