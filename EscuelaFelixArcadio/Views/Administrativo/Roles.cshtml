@{
    ViewBag.Title = "Gestión de Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Content/admin-styles.css?v=8" rel="stylesheet" />
}

<div class="reportes-container">
    <h1 class="admin-title">Gestión de Roles</h1>

    <div class="admin-info-card">
        <div class="admin-info-card-body">
            <i class="fas fa-user-shield admin-info-icon"></i>
            <p class="admin-info-text">Esta sección redirige a la gestión de roles de usuarios del sistema.</p>
        </div>
    </div>

    <div class="admin-actions">
        <a href="@Url.Action("ListarUsuariosConRoles", "Administrativo")" class="btn btn-create">
            <i class="fas fa-arrow-right"></i> Ver Roles
        </a>
    </div>
</div>
