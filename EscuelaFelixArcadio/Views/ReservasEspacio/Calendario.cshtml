            hoy.setHours(0, 0, 0, 0);
            
            if (fechaInicio < hoy) {
                showErrorModal('⚠️ Fecha Inválida', 
                    'No se pueden crear reservas en fechas pasadas. Por favor, seleccione una fecha igual o posterior a hoy (' + 
                    hoy.toLocaleDateString('es-ES') + ').');
                return;
            }
            
            if (fechaFin < hoy) {
                showErrorModal('⚠️ Fecha Inválida', 
                    'No se pueden crear reservas en fechas pasadas. Por favor, seleccione una fecha igual o posterior a hoy (' + 
                    hoy.toLocaleDateString('es-ES') + ').');
                return;
            }
            
            // Mostrar indicador de carga
            showLoadingMessage();
            
            var formData = {
                IdEspacio: $('#espacioSelect').val(),
                IdUsuario: $('#usuarioSelect').val(),
                FechaInicio: $('#fechaInicio').val(),
                FechaFin: $('#fechaFin').val(),
                Notas: $('#notas').val(),
                IdEstado: 1 // Estado activo
            };

            $.ajax({
