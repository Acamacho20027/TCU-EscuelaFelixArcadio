                        }
                        
                        // Mostrar mensaje de éxito
                        showSuccessMessage('Reserva creada exitosamente');
                    } else {
                        showErrorModal(response.message);
                    }
                },
                error: function() {
                    // Ocultar indicador de carga
                    hideLoadingMessage();
