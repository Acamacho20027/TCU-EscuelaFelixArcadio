                            // Forzar la recarga de eventos desde el servidor
                            calendar.refetchEvents();
                            
                            console.log('✅ refetchEvents() ejecutado - el calendario debería actualizarse');
                        } else {
                            console.error('❌ Error: Variable calendar no está definida');
