@{
    ViewBag.Title = "Clave Actualizada";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-header-content">
                <div class="auth-icon success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h1 class="auth-title">&iexcl;Contrase&ntilde;a Actualizada!</h1>
                <p class="auth-subtitle">Tu contrase&ntilde;a ha sido cambiada exitosamente</p>
            </div>
        </div>
        
        <div class="auth-body auth-body-negative-margin">
            <div class="success-message-box">
                <div class="success-icon-large">
                    <i class="fas fa-shield-check"></i>
                </div>
                <h3>@ViewBag.Mensaje</h3>
                
                <div class="success-info">
                    <div class="success-info-item">
                        <i class="fas fa-check-circle"></i>
                        <div>
                            <strong>Contrase&ntilde;a Segura</strong>
                            <p>Tu nueva contrase&ntilde;a ha sido guardada de forma segura</p>
                        </div>
                    </div>
                    <div class="success-info-item">
                        <i class="fas fa-lock"></i>
                        <div>
                            <strong>Cuenta Protegida</strong>
                            <p>Tu cuenta est&aacute; protegida con tu nueva contrase&ntilde;a</p>
                        </div>
                    </div>
                    <div class="success-info-item">
                        <i class="fas fa-key"></i>
                        <div>
                            <strong>Acceso Listo</strong>
                            <p>Ya puedes iniciar sesi&oacute;n con tu nueva contrase&ntilde;a</p>
                        </div>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <div class="button-container">
                        @Html.ActionLink("Iniciar Sesi\u00f3n", "Login", "Account", null, new { @class = "btn-auth" })
                    </div>
                    <div class="button-container">
                        @Html.ActionLink("Ir al Inicio", "Index", "Home", null, new { @class = "btn-auth-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/auth-pages.css" rel="stylesheet" />

