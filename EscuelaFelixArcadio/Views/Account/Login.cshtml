@using EscuelaFelixArcadio.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-header-content">
                <div class="auth-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h1 class="auth-title">Iniciar Sesión</h1>
                <p class="auth-subtitle">Accede a tu cuenta de la Escuela Félix Arcadio Montero Monge</p>
            </div>
        </div>
        
        <div class="auth-body">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "loginForm" }))
            {
                @Html.AntiForgeryToken()
                
                @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label-custom" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control-custom", placeholder = "Ingresa tu correo electrónico" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label-custom" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control-custom", placeholder = "Ingresa tu contraseña" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="checkbox-custom">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                
                <button type="submit" class="btn-auth">
                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar sesión
                </button>
            }
            
            <!-- Contador regresivo para cuenta bloqueada -->
            <div id="lockoutCounter" class="lockout-counter lockout-counter-hidden">
                <div class="lockout-message">
                    <i class="fas fa-lock"></i>
                    <h3>Cuenta Bloqueada</h3>
                    <p>Su cuenta ha sido bloqueada debido a múltiples intentos fallidos.</p>
                    <div class="countdown-timer">
                        <span id="countdownText">Puede intentar nuevamente en: <strong id="timeRemaining">--:--</strong></span>
                    </div>
                </div>
                
                <!-- Mensaje adicional en el espacio blanco -->
                <div class="wait-message">
                    <div class="wait-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h4>Tiempo de Espera</h4>
                    <p>Tiene que esperar 5 minutos para poder utilizar de nuevo las funcionalidades de la página web.</p>
                    <div class="info-box">
                        <i class="fas fa-info-circle"></i>
                        <span>Durante este tiempo, todas las funciones están temporalmente deshabilitadas por seguridad.</span>
                    </div>
                </div>
            </div>
            
            <div class="auth-links">
                <div class="auth-links-text">
                    <p>¿No tienes una cuenta?</p>
                </div>
                <div class="auth-buttons-row">
                    <div class="button-container">
                        @Html.ActionLink("Registrarse aquí", "Register", new { }, new { @class = "btn-auth" })
                    </div>
                    <div class="button-container">
                        @Html.ActionLink("¿Olvidaste tu contraseña?", "RecuperarContrasena", new { }, new { @class = "btn-auth-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/auth-pages.css" rel="stylesheet" />
    <script>
        $(document).ready(function() {
            // Verificar si hay mensajes de error de bloqueo al cargar la página
            var errorMessages = $('.validation-summary-errors ul li');
            var hasLockoutMessage = false;
            
            errorMessages.each(function() {
                var message = $(this).text();
                if (message.includes('bloqueada') || message.includes('bloqueado')) {
                    hasLockoutMessage = true;
                    
                    // Extraer tiempo del mensaje
                    var timeMatch = message.match(/(\d+)\s+minuto/);
                    if (timeMatch) {
                        var minutes = parseInt(timeMatch[1]);
                        startCountdown(minutes);
                    }
                }
            });
            
            function startCountdown(minutes) {
                // Ocultar el formulario y mostrar el contador
                $('.auth-body form').hide();
                $('.auth-links').hide(); // Ocultar también los enlaces de registro y recuperación
                $('#lockoutCounter').show();
                
                // Deshabilitar todos los elementos interactivos de la página
                $('a, button, input, select, textarea').prop('disabled', true).css('pointer-events', 'none');
                
                var totalSeconds = minutes * 60;
                var timer = setInterval(function() {
                    var hours = Math.floor(totalSeconds / 3600);
                    var mins = Math.floor((totalSeconds % 3600) / 60);
                    var secs = totalSeconds % 60;
                    
                    var timeString = '';
                    if (hours > 0) {
                        timeString += hours + 'h ';
                    }
                    timeString += mins + 'm ' + secs + 's';
                    
                    $('#timeRemaining').text(timeString);
                    
                    if (totalSeconds <= 0) {
                        clearInterval(timer);
                        $('#countdownText').html('<strong>¡Ya puede intentar iniciar sesión nuevamente!</strong>');
                        $('#timeRemaining').text('');
                        
                        // Reactivar elementos
                        $('a, button, input, select, textarea').prop('disabled', false).css('pointer-events', 'auto');
                        
                        setTimeout(function() {
                            location.reload();
                        }, 2000);
                    }
                    
                    totalSeconds--;
                }, 1000);
            }
        });
    </script>
}