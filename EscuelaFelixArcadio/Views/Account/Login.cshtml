@using EscuelaFelixArcadio.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-header-content">
                <div class="auth-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h1 class="auth-title">Iniciar Sesión</h1>
                <p class="auth-subtitle">Accede a tu cuenta de la Escuela Félix Arcadio Montero Monge</p>
            </div>
        </div>
        
        <div class="auth-body">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", id = "loginForm" }))
            {
                @Html.AntiForgeryToken()
                
                @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label-custom" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control-custom", placeholder = "Ingresa tu correo electrónico" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label-custom" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control-custom", placeholder = "Ingresa tu contraseña" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="checkbox-custom">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                
                <button type="submit" class="btn-auth">
                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                </button>
            }
            
            <!-- Contador regresivo para cuenta bloqueada -->
            <div id="lockoutCounter" class="lockout-counter" style="display: none;">
                <div class="lockout-message">
                    <i class="fas fa-lock"></i>
                    <h3>Cuenta Bloqueada</h3>
                    <p>Su cuenta ha sido bloqueada debido a múltiples intentos fallidos.</p>
                    <div class="countdown-timer">
                        <span id="countdownText">Puede intentar nuevamente en: <strong id="timeRemaining">--:--</strong></span>
                    </div>
                </div>
                
                <!-- Mensaje adicional en el espacio blanco -->
                <div class="wait-message">
                    <div class="wait-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <h4>Tiempo de Espera</h4>
                    <p>Tiene que esperar 5 minutos para poder utilizar de nuevo las funcionalidades de la página web.</p>
                    <div class="info-box">
                        <i class="fas fa-info-circle"></i>
                        <span>Durante este tiempo, todas las funciones están temporalmente deshabilitadas por seguridad.</span>
                    </div>
                </div>
            </div>
            
            <div class="auth-links">
                <div class="auth-links-text">
                    <p>¿No tienes una cuenta?</p>
                </div>
                <div class="auth-buttons-row">
                    <div class="button-container">
                        @Html.ActionLink("Registrarse aquí", "Register", new { }, new { @class = "btn-auth" })
                    </div>
                    <div class="button-container">
                        @Html.ActionLink("¿Olvidaste tu contraseña?", "RecuperarContrasena", new { }, new { @class = "btn-auth-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function() {
            // Verificar si hay mensajes de error de bloqueo al cargar la página
            var errorMessages = $('.validation-summary-errors ul li');
            var hasLockoutMessage = false;
            
            errorMessages.each(function() {
                var message = $(this).text();
                if (message.includes('bloqueada') || message.includes('bloqueado')) {
                    hasLockoutMessage = true;
                    
                    // Extraer tiempo del mensaje
                    var timeMatch = message.match(/(\d+)\s+minuto/);
                    if (timeMatch) {
                        var minutes = parseInt(timeMatch[1]);
                        startCountdown(minutes);
                    }
                }
            });
            
            function startCountdown(minutes) {
                // Ocultar el formulario y mostrar el contador
                $('.auth-body form').hide();
                $('.auth-links').hide(); // Ocultar también los enlaces de registro y recuperación
                $('#lockoutCounter').show();
                
                // Deshabilitar todos los elementos interactivos de la página
                $('a, button, input, select, textarea').prop('disabled', true).css('pointer-events', 'none');
                
                var totalSeconds = minutes * 60;
                var timer = setInterval(function() {
                    var hours = Math.floor(totalSeconds / 3600);
                    var mins = Math.floor((totalSeconds % 3600) / 60);
                    var secs = totalSeconds % 60;
                    
                    var timeString = '';
                    if (hours > 0) {
                        timeString += hours + 'h ';
                    }
                    timeString += mins + 'm ' + secs + 's';
                    
                    $('#timeRemaining').text(timeString);
                    
                    if (totalSeconds <= 0) {
                        clearInterval(timer);
                        $('#countdownText').html('<strong>¡Ya puede intentar iniciar sesión nuevamente!</strong>');
                        $('#timeRemaining').text('');
                        
                        // Reactivar elementos
                        $('a, button, input, select, textarea').prop('disabled', false).css('pointer-events', 'auto');
                        
                        setTimeout(function() {
                            location.reload();
                        }, 2000);
                    }
                    
                    totalSeconds--;
                }, 1000);
            }
        });
    </script>
    <style>
        .auth-links-text {
            text-align: center;
            margin-bottom: 20px;
        }

        .auth-links-text p {
            color: #64748b;
            font-size: 16px;
            margin: 0;
            font-weight: 500;
        }

        .auth-buttons-row {
            display: flex;
            width: 100%;
            margin: 0 auto;
            align-items: flex-start;
        }

        .button-container {
            flex: 1;
            padding: 0 7.5px;
        }

        .btn-auth-secondary {
            background: #64748b;
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            border: none;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: block;
            text-align: center;
            width: 100%;
            height: 48px;
            line-height: 24px;
            box-sizing: border-box;
            margin-top: -1px;
        }

        .btn-auth-secondary:hover {
            background: #475569;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(100, 116, 139, 0.3);
            text-decoration: none;
            color: white;
        }

        .btn-auth {
            background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            border: none;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: block;
            text-align: center;
            width: 100%;
            height: 48px;
            line-height: 24px;
            box-sizing: border-box;
            margin-top: -2px;
        }

        .btn-auth:hover {
            background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(30, 58, 138, 0.3);
            text-decoration: none;
            color: white;
        }

        /* Estilos para el contador de bloqueo */
        .lockout-counter {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            border: 2px solid #f87171;
            border-radius: 12px;
            padding: 30px;
            margin: 20px 0;
            text-align: center;
            box-shadow: 0 4px 12px rgba(248, 113, 113, 0.15);
        }

        .lockout-message i {
            font-size: 48px;
            color: #dc2626;
            margin-bottom: 16px;
        }

        .lockout-message h3 {
            color: #dc2626;
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .lockout-message p {
            color: #7f1d1d;
            font-size: 16px;
            margin-bottom: 20px;
        }

        .countdown-timer {
            background: #ffffff;
            border: 2px solid #fca5a5;
            border-radius: 8px;
            padding: 16px;
            margin-top: 16px;
        }

        #timeRemaining {
            color: #dc2626;
            font-size: 24px;
            font-weight: 700;
            font-family: 'Courier New', monospace;
        }

        #countdownText {
            color: #7f1d1d;
            font-size: 16px;
            font-weight: 600;
        }

        /* Estilos para el mensaje de espera */
        .wait-message {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            border: 2px solid #cbd5e1;
            border-radius: 12px;
            padding: 30px;
            margin-top: 20px;
            text-align: center;
            box-shadow: 0 4px 12px rgba(203, 213, 225, 0.15);
        }

        .wait-icon {
            margin-bottom: 16px;
        }

        .wait-icon i {
            font-size: 48px;
            color: #1e40af;
        }

        .wait-message h4 {
            color: #1e40af;
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .wait-message p {
            color: #475569;
            font-size: 16px;
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .info-box {
            background: #dbeafe;
            border: 1px solid #93c5fd;
            border-radius: 8px;
            padding: 12px 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .info-box i {
            color: #1e40af;
            font-size: 16px;
        }

        .info-box span {
            color: #1e40af;
            font-size: 14px;
            font-weight: 500;
        }

        @@media (max-width: 768px) {
            .auth-buttons-row {
                display: block;
            }
            
            .button-container {
                display: block;
                width: 100%;
                padding: 0;
                margin-bottom: 12px;
            }
            
            .button-container:last-child {
                margin-bottom: 0;
            }
        }
    </style>
}