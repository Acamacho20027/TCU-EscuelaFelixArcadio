@using EscuelaFelixArcadio.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-header-content">
                <img src="~/Content/images/escudo_escuela_felix_arcadio.jpg" alt="Escudo Escuela Félix Arcadio" class="auth-logo" />
                <h1 class="auth-title">Iniciar Sesión</h1>
                <p class="auth-subtitle">Accede a tu cuenta de la Escuela Félix Arcadio Montero Monge</p>
            </div>
        </div>
        
        <div class="auth-body">
            <div class="auth-form">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    
                    @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
                    
                    <div class="form-group-custom">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label-custom" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control-custom", placeholder = "Ingresa tu correo electrónico" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                    </div>
                    
                    <div class="form-group-custom">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label-custom" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control-custom", placeholder = "Ingresa tu contraseña" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                    </div>
                    
                    <div class="checkbox-custom">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                    
                    <button type="submit" class="btn-auth">
                        <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                    </button>
                }
                
                <div class="auth-links">
                    <p>¿No tienes una cuenta? @Html.ActionLink("Registrarse aquí", "Register", new { }, new { @class = "auth-link" })</p>
                    @* Habilite esta opción una vez tenga la confirmación de la cuenta habilitada para la funcionalidad de restablecimiento de contraseña
                        <p>@Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword", new { }, new { @class = "auth-link" })</p>*@
                </div>
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}