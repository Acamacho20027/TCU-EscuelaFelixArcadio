@using EscuelaFelixArcadio.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-header-content">
                <div class="auth-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h1 class="auth-title">Iniciar Sesión</h1>
                <p class="auth-subtitle">Accede a tu cuenta de la Escuela Félix Arcadio Montero Monge</p>
            </div>
        </div>
        
        <div class="auth-body">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label-custom" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control-custom", placeholder = "Ingresa tu correo electrónico" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label-custom" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control-custom", placeholder = "Ingresa tu contraseña" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="checkbox-custom">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                
                <button type="submit" class="btn-auth">
                    <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                </button>
            }
            
            <div class="auth-links">
                <div class="auth-links-text">
                    <p>¿No tienes una cuenta?</p>
                </div>
                <div class="auth-buttons-row">
                    <div class="button-container">
                        @Html.ActionLink("Registrarse aquí", "Register", new { }, new { @class = "btn-auth" })
                    </div>
                    <div class="button-container">
                        @Html.ActionLink("¿Olvidaste tu contraseña?", "RecuperarContrasena", new { }, new { @class = "btn-auth-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <style>
        .auth-links-text {
            text-align: center;
            margin-bottom: 20px;
        }

        .auth-links-text p {
            color: #64748b;
            font-size: 16px;
            margin: 0;
            font-weight: 500;
        }

        .auth-buttons-row {
            display: flex;
            width: 100%;
            margin: 0 auto;
            align-items: flex-start;
        }

        .button-container {
            flex: 1;
            padding: 0 7.5px;
        }

        .btn-auth-secondary {
            background: #64748b;
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            border: none;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: block;
            text-align: center;
            width: 100%;
            height: 48px;
            line-height: 24px;
            box-sizing: border-box;
            margin-top: -1px;
        }

        .btn-auth-secondary:hover {
            background: #475569;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(100, 116, 139, 0.3);
            text-decoration: none;
            color: white;
        }

        .btn-auth {
            background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            border: none;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: block;
            text-align: center;
            width: 100%;
            height: 48px;
            line-height: 24px;
            box-sizing: border-box;
            margin-top: -2px;
        }

        .btn-auth:hover {
            background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(30, 58, 138, 0.3);
            text-decoration: none;
            color: white;
        }

        @@media (max-width: 768px) {
            .auth-buttons-row {
                display: block;
            }
            
            .button-container {
                display: block;
                width: 100%;
                padding: 0;
                margin-bottom: 12px;
            }
            
            .button-container:last-child {
                margin-bottom: 0;
            }
        }
    </style>
}