@model EscuelaFelixArcadio.Models.RecuperarContrasenaViewModel
@{
    ViewBag.Title = "Recuperar Cuenta";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-header-content">
                <div class="auth-icon">
                    <i class="fas fa-key"></i>
                </div>
                <h1 class="auth-title">Recuperar Contrase&ntilde;a</h1>
                <p class="auth-subtitle">Ingresa tu correo electr&oacute;nico y te enviaremos una contrase&ntilde;a temporal</p>
            </div>
        </div>
        
        <div class="auth-body">
            @using (Html.BeginForm("RecuperarContrasena", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })
                
                <div class="info-message">
                    <i class="fas fa-info-circle"></i>
                    <p>Te enviaremos un correo electr&oacute;nico con una contrase&ntilde;a temporal que podr&aacute;s usar para cambiar tu contrase&ntilde;a.</p>
                </div>
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label-custom" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control-custom", placeholder = "tucorreo@ejemplo.com", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>
                
                <button type="submit" class="btn-auth-full">
                    <i class="fas fa-envelope me-2"></i>Enviar Contrase&ntilde;a Temporal
                </button>
            }
            
            <div class="auth-links">
                <div class="auth-links-text">
                    <p>&iquest;Recordaste tu contrase&ntilde;a?</p>
                </div>
                <div class="auth-button-center">
                    @Html.ActionLink("Iniciar sesi\u00f3n aqu\u00ed", "Login", new { }, new { @class = "btn-auth" })
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <style>
        .auth-links-text {
            text-align: center;
            margin-bottom: 20px;
        }

        .auth-links-text p {
            color: #64748b;
            font-size: 16px;
            margin: 0;
            font-weight: 500;
        }

        .auth-button-center {
            text-align: center;
        }

        .info-message {
            background: #eff6ff;
            border-left: 4px solid #3b82f6;
            padding: 15px;
            margin-bottom: 25px;
            border-radius: 8px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
        }

        .info-message i {
            color: #3b82f6;
            font-size: 20px;
            margin-top: 2px;
            flex-shrink: 0;
        }

        .info-message p {
            margin: 0;
            color: #1e40af;
            line-height: 1.6;
            font-size: 14px;
        }

        .btn-auth-full {
            background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
            color: white;
            padding: 14px 32px;
            border-radius: 8px;
            border: none;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: block;
            text-align: center;
            width: 100%;
            height: 56px;
            line-height: 28px;
            box-sizing: border-box;
        }

        .btn-auth-full:hover {
            background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(30, 58, 138, 0.3);
            text-decoration: none;
            color: white;
        }

        .btn-auth {
            background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
            color: white;
            padding: 12px 20px;
            border-radius: 8px;
            border: none;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            width: 320px;
            height: 56px;
            line-height: 32px;
            box-sizing: border-box;
        }

        .btn-auth:hover {
            background: linear-gradient(135deg, #1e40af 0%, #2563eb 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(30, 58, 138, 0.3);
            text-decoration: none;
            color: white;
        }

        @@media (max-width: 768px) {
            .btn-auth {
                width: 100%;
                max-width: 300px;
            }
            
            .info-message {
                flex-direction: column;
                text-align: center;
                gap: 10px;
            }
            
            .info-message i {
                margin-top: 0;
            }
        }
    </style>
}