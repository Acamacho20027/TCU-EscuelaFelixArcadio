@model EscuelaFelixArcadio.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <div class="auth-header-content">
                <div class="auth-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <h1 class="auth-title">Registrar Cuenta</h1>
                <p class="auth-subtitle">Únete a la comunidad deportiva de la Escuela Félix Arcadio Montero Monge</p>
            </div>
        </div>
        
        <div class="auth-body">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label-custom" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control-custom", placeholder = "Ingresa tu correo electrónico" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label-custom" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control-custom", placeholder = "Crea una contraseña segura" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
                </div>
                
                <div class="form-group-custom">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label-custom" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control-custom", placeholder = "Confirma tu contraseña" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "field-validation-error" })
                </div>
                
                <button type="submit" class="btn-auth-full">
                    <i class="fas fa-user-plus me-2"></i>Registrar Cuenta
                </button>
            }
            
            <div class="auth-links">
                <div class="auth-links-text">
                    <p>¿Ya tienes una cuenta?</p>
                </div>
                <div class="auth-button-center">
                    @Html.ActionLink("Iniciar sesión aquí", "Login", new { }, new { @class = "btn-auth-register" })
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/auth-pages.css" rel="stylesheet" />
}
